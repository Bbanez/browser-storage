{
  "name": "@banez/browser-storage",
  "version": "1.0.0",
  "description": "Simple interface for Local Storage.",
  "main": "./index.js",
  "types": "./index.d.ts",
  "scripts": {
    "dev": "vite",
    "build:ts": "tsc -p tsconfig.json",
    "bundle": "npm run lint && npm-tool --bundle",
    "publish": "npm-tool --publish",
    "link": "npm-tool --link",
    "link:sudo": "npm-tool --link --sudo",
    "unlink": "npm-tool --unlink",
    "unlink:sudo": "npm-tool --unlink --sudo",
    "pack": "npm-tool --pack",
    "test": "mocha -r ts-node/register test/integration/*.test.ts --recursive --exit",
    "test:active": "mocha -r ts-node/register test/integration/*.active.test.ts --recursive --exit --bail",
    "test:unit": "mocha -r ts-node/register test/unit/*.test.ts --recursive --exit",
    "test:unit:active": "mocha -r ts-node/register test/unit/*.active.test.ts --recursive --exit",
    "lint": "eslint . --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bbanez/browser-storage.git"
  },
  "keywords": [
    "local storage",
    "browser storage",
    "storage"
  ],
  "author": "Branislav VajagiÄ‡",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Bbanez/browser-storage/issues"
  },
  "homepage": "https://github.com/Bbanez/browser-storage",
  "peerDependencies": {
    "uuid": ">=8.3.2"
  },
  "devDependencies": {
    "@banez/npm-tool": "1.1.0",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^9.1.0",
    "@types/node": "^15.6.2",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "chai": "^4.3.4",
    "eslint": "^7.9.0",
    "mocha": "^9.2.0",
    "prettier": "^2.2.1",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.4.4",
    "uuid": "^8.3.2"
  }
}
